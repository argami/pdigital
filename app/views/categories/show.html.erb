<%= stylesheet_link_tag    "categories" %>

<div class="row white">
	<div id="categories_header"><%= @category.name %></div>
		<% if @articles.empty? %>
		
		<p>There aren't articles in this category</p>
		
		<% else %>
		
		<div class="span4">
		
		<% @articles.each_with_index do |article,index| %>	
		<% if (index-2)%2 == 0 %>
			<h1><%= link_to article.title, article_path(article) %></h1>
			<p><%= link_to (image_tag article.avatar.url(:medium), :border => "0"), article_path(article) %></p>
			<p><%= article.resume %></p>
		<% end %>
		<% end %>
		
		</div>
		<div class="span4">
		
		<% @articles.each_with_index do |article,index| %>	
		<% if (index-1)%2 == 0 %>
			<h1><%= link_to article.title, article_path(article) %></h1>
			<p><%= link_to (image_tag article.avatar.url(:medium), :border => "0"), article_path(article) %></p>
			<p><%= article.resume %></p>
		<% end %>
		<% end %>
		
		</div>
		<div class="span4">
		
		
		</div>
		
		<% end %>
	
</div>
