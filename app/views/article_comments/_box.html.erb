<% if @article.article_comments.empty? %>

	<div class="comment_box">
		<div class="comment_body">No hi ha comentaris en aquesta not√≠cia</div>
	</div>

<% else %>

	<% comment_number = 0 %>
	<% @article.article_comments.each do |comment| %>
	
		<div class="comment_box">
			<div class="comment_header">#<%= comment_number+=1 %> <span class="comment_author"><%= comment.user.email %></span> - <%= comment.created_at.strftime("%d/%m/%Y at %H:%M") %></div>			
			<div class="comment_body"><%= comment.comment %></div>
			<div class="comment_social"><%= image_tag "ico/good.png", :valign => "-6px" %> Ben dit! | <%= image_tag "ico/bad.png", :valign => "-6px" %> No ho comparteixo</div>
		</div>

	<% end %>

<% end %>
